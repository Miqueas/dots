{
  /// ====== EDITOR
  "editor.fontSize": 13,
  "editor.fontFamily": "CaskaydiaCove Nerd Font",
  "editor.tabSize": 2,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "editor.autoClosingBrackets": "always",
  "editor.foldingStrategy": "indentation",
  "editor.semanticHighlighting.enabled": true,
  "editor.rulers": [ 80, 100, 120 ],

  /// ====== WINDOW
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  "window.commandCenter": true,
  "window.menuBarVisibility": "hidden",

  /// ====== WORKBENCH
  "workbench.sideBar.location": "right",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.colorTheme": "Monokai Pro",
  "workbench.iconTheme": "bearded-icons",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.editor.showTabs": false,

  /// ====== TERMINAL
  "terminal.integrated.cursorStyle": "line",

  /// ====== FILES
  "files.eol": "\n",

  /// ====== BREADCRUMBS
  "breadcrumbs.enabled": false,

  /// ====== SECURITY
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.emptyWindow": false,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.banner": "never",
  /// ====== EXTENSIONS

  /// Lua (sumneko.lua)
  "Lua.telemetry.enable": false,
  "Lua.runtime.version": "Lua 5.1",
  "Lua.completion.callSnippet": "Replace",
  "Lua.completion.displayContext": 4,
  "Lua.completion.keywordSnippet": "Both",
  "Lua.hint.enable": true,
  "Lua.hint.arrayIndex": "Disable",

  /// Nim (nimsaem.nimvscode)
  // "nim.buildOnSave": false,
  // "nim.provider": "none",

  /// CodeSnap (adpyke.codesnap)
  "codesnap.backgroundColor": "rgba(0,0,0,0)",
  "codesnap.showWindowControls": false,
  "codesnap.shutterAction": "copy",
  "codesnap.transparentBackground": true,

  /// Meson (mesonbuild.mesonbuild)
  "mesonbuild.configureOnOpen": false,

  /// Gruvbox Material (sainnhe.gruvbox-material)
  "gruvboxMaterial.darkContrast": "soft",

  /// Go (golang.go)
  // "go.buildOnSave": "off",
  // "[go]": {
  //   "editor.formatOnSave": false,
  //   "editor.codeActionsOnSave": {
  //     "source.organizeImports": false
  //   }
  // }
}