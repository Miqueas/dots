{
  /// ====== EDITOR
  "editor.fontSize": 13,
  "editor.fontFamily": "CaskaydiaCove Nerd Font",
  "editor.tabSize": 2,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "editor.autoClosingBrackets": "always",
  "editor.foldingStrategy": "indentation",
  "editor.semanticHighlighting.enabled": true,
  "editor.rulers": [ 80, 100, 120 ],
  "editor.insertSpaces": true,

  /// ====== WINDOW
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "hidden",

  /// ====== WORKBENCH
  "workbench.sideBar.location": "right",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.colorTheme": "Chogori Darkest Blue",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.editor.showTabs": false,
  "workbench.layoutControl.enabled": false,

  /// ====== TERMINAL
  "terminal.integrated.cursorStyle": "line",

  /// ====== FILES
  "files.eol": "\n",

  /// ====== BREADCRUMBS
  "breadcrumbs.enabled": false,

  /// ====== SECURITY
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.emptyWindow": false,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.banner": "never",

  /// ====== INTEGRATED TERMINAL
  "terminal.integrated.profiles.windows": {
    // Profiles for MSYS2 on Windows
    "MSYS/MSYS": {
      "path": "cmd.exe",
      "args": [ "/c", "C:\\MSYS\\msys2_shell.cmd -defterm -no-start -msys -shell fish" ]
    },
    "MSYS/UCRT64": {
      "path": "cmd.exe",
      "args": [ "/c", "C:\\MSYS\\msys2_shell.cmd -defterm -no-start -ucrt64 -shell fish" ]
    },
    "MSYS/MINGW64": {
      "path": "cmd.exe",
      "args": [ "/c", "C:\\MSYS\\msys2_shell.cmd -defterm -no-start -mingw64 -shell fish" ]
    },
    "MSYS/MINGW32": {
      "path": "cmd.exe",
      "args": [ "/c", "C:\\MSYS\\msys2_shell.cmd -defterm -no-start -mingw32 -shell fish" ]
    },
    "MSYS/CLANG64": {
      "path": "cmd.exe",
      "args": [ "/c", "C:\\MSYS\\msys2_shell.cmd -defterm -no-start -clang64 -shell fish" ]
    },
    "MSYS/CLANG32": {
      "path": "cmd.exe",
      "args": [ "/c", "C:\\MSYS\\msys2_shell.cmd -defterm -no-start -clang32 -shell fish" ]
    },
    "MSYS/CLANGARM64": {
      "path": "cmd.exe",
      "args": [ "/c", "C:\\MSYS\\msys2_shell.cmd -defterm -no-start -clangarm64 -shell fish" ]
    }
  },
  
  /// ====== EXTENSIONS
  /// Lua (sumneko.lua)
  "Lua.telemetry.enable": false,
  "Lua.runtime.version": "Lua 5.1",
  "Lua.completion.callSnippet": "Replace",
  "Lua.completion.displayContext": 4,
  "Lua.hint.enable": true,
  "Lua.hint.arrayIndex": "Disable",

  /// CodeSnap (adpyke.codesnap)
  "codesnap.backgroundColor": "rgba(0,0,0,0)",
  "codesnap.showWindowControls": false,
  "codesnap.shutterAction": "copy",
  "codesnap.transparentBackground": true,

  /// Meson (mesonbuild.mesonbuild)
  "mesonbuild.configureOnOpen": false,
  "mesonbuild.buildFolder": "_BUILD",

  /// Makefile Tools (vscode.makefile-tools)
  "makefile.makefilePath": "Makefile",

  /// CMake 
  "cmake.configureOnOpen": false
}